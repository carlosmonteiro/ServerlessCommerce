# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Cognito Configuration
USER_POOL_ID=us-east-1_XXXXXXXXX
IDENTITY_POOL_ID=us-east-1:XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# DynamoDB Tables
ORDERS_TABLE=ServerlessEcommerce-Orders
PRODUCTS_TABLE=ServerlessEcommerce-Products
INVOICES_TABLE=ServerlessEcommerce-Invoices
BLOCKED_USERS_TABLE=ServerlessEcommerce-BlockedUsers

# EventBridge
EVENT_BUS_NAME=ServerlessEcommerce-EventBus

# Email Configuration
SES_FROM_EMAIL=noreply@yourdomain.com
SES_REPLY_EMAIL=support@yourdomain.com
ALERT_EMAIL=admin@yourdomain.com

# Authentication - Environment Variables Approach (Option 1)
# Comma-separated list of blocked emails (use lowercase)
BLOCKED_EMAILS=user1@example.com,user2@example.com

# API Configuration
API_GATEWAY_STAGE=prod

# Logging
LOG_LEVEL=INFO

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
