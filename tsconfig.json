{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/productsLayer":[
        "src/products/layers/productsLayer/nodejs/productRepository"
      ],
      "/opt/nodejs/productEventsLayer":[
        "src/products/layers/productEventsLayer/nodejs/productEvent"
      ],
      "/opt/nodejs/ordersLayer":[
        "src/orders/layers/ordersLayer/nodejs/orderRepository"
      ],
      "/opt/nodejs/ordersApiLayer":[
        "src/orders/layers/ordersApiLayer/nodejs/orderApi"
      ],
      "/opt/nodejs/orderEventsLayer":[
        "src/orders/layers/orderEventsLayer/nodejs/orderEvent"
      ],
      "/opt/nodejs/orderEventsRepositoryLayer":[
        "src/orders/layers/orderEventsRepositoryLayer/nodejs/orderEventRepository"
      ],
      "/opt/nodejs/invoiceTransaction":[
        "src/invoices/layers/invoiceTransaction/nodejs/invoiceTransaction"
      ],    
      "/opt/nodejs/invoiceWSConnection":[
        "src/invoices/layers/invoiceWSConnection/nodejs/invoiceWSConnection"
      ],
      "/opt/nodejs/invoiceRepository":[
        "src/invoices/layers/invoiceRepository/nodejs/invoiceRepository"
      ],    
      "/opt/nodejs/authUserInfo":[
        "src/auth/layers/authUserInfo/nodejs/authUserInfo"
      ]    

    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
